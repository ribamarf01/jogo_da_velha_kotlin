<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/board_texture">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
    >

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/points_X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points_X"
            android:textSize="30sp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/points_O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/points_O"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#fff"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btn00"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
        <Button
            android:id="@+id/btn01"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
        <Button
            android:id="@+id/btn02"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btn10"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
        <Button
            android:id="@+id/btn11"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
        <Button
            android:id="@+id/btn12"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btn20"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
        <Button
            android:id="@+id/btn21"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin"/>
        <Button
            android:id="@+id/btn22"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="@dimen/square_btn_size"
            android:layout_height="@dimen/square_btn_size"
            android:layout_margin="@dimen/btn_margin" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin">
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/reset"
            android:background="@android:color/background_light"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>